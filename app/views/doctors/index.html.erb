<p id="notice"><%= notice %></p>

<h1>Listing Doctors</h1>

<!-- 选择医院-->
<select id="combo">
  <option>全部</option>
  <% @hospitals.each do |item| %>
    <option value="<% item %>"><%= item %></option>
  <% end %>
</select>

<!-- 选择科室-->
<select id="combo2">
  <option>全部</option>
  <% @departs.each do |item| %>
    <option value="<% item %>"><%= item %></option>
  <% end %>
</select>

  <div class="row">
    <% @doctors.each do |doctor| %>
      <div style="width:25%; float:left; margin:13px 10px; border-radius:10px;">
        <%= image_tag doctor.img %>
      </div>
      <div style="height:80px; width:65%; float:left; margin-left:4px;margin-top:13px;">
        <p>
          <%=  link_to doctor.name, doctor%> - <%= doctor.hospital %><br>
          <small class="author"><%= doctor.depart %></small>
        </p>
        <td><%= link_to 'Show', doctor %></td>
        <td><%= link_to 'Edit', edit_doctor_path(doctor) %></td>
        <td><%= link_to 'Destroy', doctor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </div>
    <% end %>
  </div>

<br>

<%= link_to 'New Doctor', new_doctor_path %>
